@import 'jeet'
section#portfolio 
  text-align center
  padding-bottom 2rem
  background-color pale-bg

  .portfolio 
    .portfolio-item 
      +desktop()
        j-column(1/4, gutter: 1, cycle: 4)

      +mobile()
        j-column(1)

      +tablet()
        j-column(1/3, gutter: 1, cycle: 3)

      margin-top 1rem

      .bottom
        padding 0.5em 0.25em
        margin 0
        background-color white

      .brief
        height 3.7em
        text-overflow ellipsis
        overflow hidden
        width 100%
        margin-top 0

     .read-more
       text-align right
       display block
       color lightBlue 

       &:hover
         text-decoration underline
     .link
        height 150px
        position relative
        display block

        background-position center
        background-size cover
        background-repeat no-repeat
        overflow hidden

        dist = 15px

        &:before, &:after
          content ''
          display block
          opacity 0
          position absolute
          transition opacity animationTime

        &:after
          top 0
          left 0
          right 0
          bottom 0
          background-color rgba(darkBlue, 50%)

        &:hover
          box-shadow inset 0 0 10px rgba(0, 0, 0, 30%)

          &:before, &:after
            opacity 1

          .details > * 
            opacity 1
            transform scale(1)
          
        .details 
          color white
          left 50%
          position absolute
          top 50%
          transform translate(-50%, -50%)
          z-index 1
          width 80%


          > * 
            opacity 0
            position relative
            transition opacity animationTime, transform animationTime
            transform translateY(-25px)
            transform scale(0.85)
          
          .title, .subtext 
            margin 0
            text-shadow 1px 1px 0 rgba(0, 0, 0, 0.3)

          .view 
            display inline-block
            margin-right 0.25em
            margin-top 0.25em

            &:hover
              color inherit

              &:after
                width 100%

            &:after
              content ''
              display block
              height 1px
              width 0
              margin 0 auto
              background-color white
              transition width animationTime*2

.modal-content
  text-align left

  .desc, .features
    .title + *
      margin-top 0.25em
    .title
      margin 0
  .desc
    j-column(5/8)
    +mobile()
      j-column(1)
  .features
    j-column(3/8)
    +mobile()
      j-column(1)

  img
    max-height 400px
    max-height 45vh
    margin 0 auto
    display block

  .live-link
    margin-bottom 1rem
  .jobname
    margin-bottom 0
