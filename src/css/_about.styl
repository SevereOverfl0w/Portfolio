@import 'jeet'
section#about
  padding-top 2rem
  .centerWrapper 
    margin-bottom @margin-top
    font-weight light
    font-style normal
    max-width 1440px
    margin 0 auto
    text-align center

    #avatar 
      margin-bottom 1em
      j-column(1/4)
      +mobile()
        j-column(1)
      img 
        max-width 100%
        max-height 220px
        border 4px solid #ECF0F1
        box-shadow 0 2px 2px alpha(darkBlue, 40%)
      #who
        font-size 0.9em

    #text
      text-align left
      j-column(3/4)
      +mobile()
        j-column(1)
      > *
        j-column(1/2, gutter: 5)
        +mobile()
          j-column(1, cycle: 1)


      margin-bottom 3em
      line-height 1.4em

checkSize = 1.75rem
.custom-icon-list
  list-style none
  padding-left 0

  font-size 1.2em
  display inline-block
  line-height checkSize


  li
    min-height checkSize
    margin-bottom 0.25rem

    .icon-checkmark
      margin-right 0.5em
      position relative
      bottom -0.1em // who knows?

.icon
  display inline-block
  width 1em
  height 1em
  fill currentColor

.icon-checkmark
  font-size checkSize
  color darkBlue
