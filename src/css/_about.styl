@import 'jeet'
section#about
  .centerWrapper 
    margin-top 1rem
    margin-bottom @margin-top
    // center()
    font-weight light
    font-style normal
    max-width 960px
    margin 0 auto
    text-align center

    #avatar 
      margin-bottom 1em
      j-column(1)
      img 
        max-width 100%
        max-height 280px
        // border-radius 100%
        border 4px solid #ECF0F1
        box-shadow 0 2px 3px alpha(darkBlue, 40%)
      
    #text
      > *
        j-column(1/2)
      margin-bottom 3em
      line-height 1.4em
