@import 'jeet'
section#about
  padding-top 2rem
  .centerWrapper 
    margin-bottom @margin-top
    // center()
    font-weight light
    font-style normal
    max-width 1440px
    margin 0 auto
    text-align center

    #avatar 
      margin-bottom 1em
      j-column(1/4)
      img 
        max-width 100%
        max-height 220px
        border 4px solid #ECF0F1
        box-shadow 0 2px 2px alpha(darkBlue, 40%)
      #who
        font-size 0.9em

    #text
      text-align left
      j-column(3/4)
      > *
        j-column(1/2, gutter: 5)

      margin-bottom 3em
      line-height 1.4em

checkSize = 2.5rem
.custom-icon-list
  list-style none
  padding-left 0

  li
    height checkSize
    margin-bottom 0.5rem

  span
    position relative
    top -(checkSize/4)
    display inline-block
    font-size 1.2em
    line-height checkSize

.checkmark
  lineWidth = 5px
  lineCol = darkBlue
  lineAng = 135deg
  lineOppAng = 180deg-(lineAng)
  display inline-block
  width checkSize
  height @width
  position relative
  margin-right 1em

  &:before, &:after
    content ''
    height lineWidth
    background-color lineCol
    position absolute

  &:before
    // Long arm
    width 100%
    transform rotate(lineAng)
    right 0
    top (@width/2)

  &:after
    width 25%
    transform rotate(lineOppAng)
    left 0
    bottom (@width/2)
