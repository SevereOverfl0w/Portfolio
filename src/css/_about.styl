@import 'jeet';
section#about {
  .centerWrapper {
    margin-top: 1rem;
    margin-bottom: @margin-top;
    // center()
    font-weight: light;
    font-style: normal;
    max-width: 960px;
    margin: 0 auto;

    text-align: center;

    #avatar {
      // col(1/3)
      margin-bottom: 3em;
      img {
        max-width: 100%; max-height: 280px;
        // border-radius: 50%;
        border: 6px solid #ECF0F1;
        box-shadow: 0 2px 4px alpha(darkBlue, 50%);
      }
    }

    #text {
      > * {
        col(1/2, cycle: 2);
      }
      margin-bottom: 3em;
      line-height: 1.4em;
    }
  }
}
