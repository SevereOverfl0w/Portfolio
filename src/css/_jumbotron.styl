section#jumbotron 
  background-image url(https://static.pexels.com/photos/3925/desk-ruler-designer-chair-large.jpeg)
  background-size cover
  color white
  font-family 'Lato'
  min-height 60%
  letter-spacing 0.3em
  position relative
  text-align center
  text-transform uppercase

  &:before
    content ''
    position absolute
    display block
    top 0
    left 0
    right 0
    bottom 0
    background-color transparentify(darkBlue)

  #logo 
    max-width 250px
    max-height @max-width
  
  #jobTitle 
    font-size 4.5rem
    margin-top 0
    border 0.5rem solid white
    padding 0.75rem
    +mobile()
      font-size 2.5rem
      border-width 0.2rem
      padding-left 0
      padding-right 0
      margin-left 0
      margin-right 0
  
  #subText 
    font-size 1.9rem
