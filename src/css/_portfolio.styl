@import 'jeet'
section#portfolio 
  background-color #ebebeb
  text-align center

  .portfolio 
    .portfolio-item 
      j-column(1/4, gutter: 0px, cycle: 4)
      height 150px
      position relative

      background-position center
      background-size cover
      background-repeat no-repeat
      overflow hidden

      dist = 15px

      &:before, &:after
        content ''
        display block
        opacity 0
        position absolute
        transition opacity animationTime

      &:after
        top 0
        left 0
        right 0
        bottom 0
        background-color rgba(darkBlue, 50%)

      &:hover
        box-shadow inset 0 0 10px rgba(0, 0, 0, 30%)

        &:before, &:after
          opacity 1

        .details > * 
          opacity 1
          transform scale(1)
        
      .details 
        color white
        left 50%
        position absolute
        top 50%
        transform translate(-50%, -50%)
        z-index 1
        width 80%

        > * 
          opacity 0
          position relative
          transition opacity animationTime, transform animationTime
          transform translateY(-25px)
          transform scale(0.85)
        
        .title, .subtext 
          margin 0
          text-shadow 1px 1px 0 rgba(0, 0, 0, 0.3)

        .view 
          display inline-block
          margin-right 0.25em
          margin-top 0.25em

          &:hover
            color inherit

            &:after
              width 100%

          &:after
            content ''
            display block
            height 1px
            width 0
            margin 0 auto
            background-color white
            transition width animationTime*2
