.siteNav {
  background-color: navbarBg;
  color: white;
  font-family: 'Lato';
  font-weight: bold;
  min-height: navbarHeight;
  line-height: navbarHeight;
  text-transform: uppercase;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 3;

  padding-left: 2rem;
  padding-right: @padding-left;

  .links {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: right;

    li {
      display: inline-block;
      margin-right: 1em;

      &:first-child {
        margin-left: @margin-right;
      }

      &:last-child {
        margin-right: 0;
      }
    }
  }
}


body {
  padding-top: navbarHeight;
}
